# -*- coding: utf-8 -*-
# vim: set syntax=yaml ts=2 sw=2 sts=2 et :

keyboard:
  shortcuts:
    # Replace <Ctrl>+<Shift>+P that is used by vscode
    - shortcut: /commands/custom/<Primary><Shift>o
      action: set
      value: 'qvm-pause --all'
    - shortcut: /commands/custom/<Primary><Shift>p
      action: unset
    # Make it coherent with <Ctrl>+<Shift>+P replacement
    - shortcut: /commands/custom/<Primary><Shift><Alt>o
      action: set
      value: 'qvm-unpause --all'
    - shortcut: /commands/custom/<Primary><Shift><Alt>p
      action: unset
    # Allow easy screen lock
    - shortcut: /commands/custom/<Super>q
      action: set
      value: 'xflock4'
