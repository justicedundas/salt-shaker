{% if whonixgw is defined and whonixgw -%}
# Upgrade Whonix TemplateVMs through {{ whonixgw }}
$tag:whonix-updatevm $default allow,target={{ whonixgw }}
{%- endif %}

# Deny Whonix TemplateVMs using UpdatesProxy of any other VM.
$tag:whonix-updatevm $anyvm deny

# Default rule for all TemplateVMs - direct the connection to {{ netvm }}
$type:TemplateVM $default allow,target={{ netvm }}

$anyvm $anyvm deny
